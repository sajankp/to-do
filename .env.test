# Test Environment Configuration
# This file is used by pytest to provide minimal required configuration
# without interfering with your local .env file

# MongoDB Configuration (minimal for config tests)
MONGO_URI=mongodb://localhost:27017/test_db
MONGO_DATABASE=test_database
MONGO_TODO_COLLECTION=test_todos
MONGO_USER_COLLECTION=test_users
MONGO_TIMEOUT=5

# Security
SECRET_KEY=test_secret_key_for_testing_only
PASSWORD_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_SECONDS=1800
REFRESH_TOKEN_EXPIRE_SECONDS=3600

# Logging - Default to INFO for tests (individual tests can override)
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=test

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=False
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# AI Configuration (optional for tests)
GEMINI_API_KEY=test_key
AI_RATE_LIMIT=10/minute
